@model DBModel.User

@{
    ViewBag.Title = "Login";
}

<style>
    .btn-primary {
        background-color: transparent;
        border-radius: 30px;
        border: 3px solid #033a9f;
        display: inline-block;
        cursor: pointer;
        color: #033a9f;
        font-family: Arial;
        font-size: 16px;
        font-weight: bold;
        padding: 4px 18px;
        text-decoration: none;
    }

    .btn-primary:active {
        position: relative;
        top: 1px;
    }

    .textbox {
        background-color: transparent;
        border-radius: 30px;
        border: 3px solid #033a9f;
        display: inline-block;
        cursor: text;
        color: #033a9f;
        font-family: Arial;
        font-size: 16px;
        padding: 4px 18px;
        text-decoration: none;
        margin: 2px;
    }
</style>

<h2>Login</h2>
@using (Html.BeginForm())
{

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <label>Username</label>
        <div>
            @Html.TextBoxFor(m => m.UserName, new { @class = "textbox" })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
        <label>Password</label>
        <div>
            @Html.PasswordFor(m => m.Password, new { @class = "textbox" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <input type="submit" style="margin-top:5px" value="Login" class="btn btn-primary" />
    </div>
}




