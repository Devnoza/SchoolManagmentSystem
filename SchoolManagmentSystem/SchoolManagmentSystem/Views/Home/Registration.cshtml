@model SchoolManagmentSystem.RegistrationView
    
@{
    ViewBag.Title = "რეგისტრაცია";
}
<h2>@ViewBag.Title</h2>
<hr />
@using (Html.BeginForm())
{

    <h4>
        <spam>სახელი :</spam> <br />@Html.TextBoxFor(x => x.FirstName) <br />
        @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "text-danger" })
        <br />
        <spam class="surname">გვარი :</spam> <br />@Html.TextBoxFor(x => x.LastName) <br />
        @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "text-danger" })
        <br />

        <p>სქესი :</p>
        @Html.DropDownListFor(modelItem => modelItem.Gender, new[] { new SelectListItem { Text = "მდედრობითი", Value = "true" }, new SelectListItem { Text = "მამრობითი", Value = "false" } }, new { @class = "form-control" })

        <br />
        <p>მომხმარებელი : </p>
        @Html.TextBoxFor(x => x.Username)<br />
        @Html.ValidationMessageFor(x => x.Username, "", new { @class = "text-danger" })<br />
        <p>იმეილი : </p>
        @Html.TextBoxFor(x => x.Email)<br />
        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })<br />
        <p>პაროლი : </p>
        @Html.TextBoxFor(x => x.Password)<br />
        @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })<br />
        <p>წოდება : </p>
        @Html.DropDownListFor(modelItem => modelItem.Role, new[] { new SelectListItem { Text = "მოსწავლე", Value = "1" }, new SelectListItem { Text = "მასწავლებელი", Value = "2" }, new SelectListItem { Text = "ადმინი", Value = "3" } }, new { @class = "form-control" })
        <br />

        <input type="submit" placeholder="" value="შევსება" class="btn btn-default" new { style="color:green" } />
        <p class="wrong">@ViewBag.Message</p>
    </h4>
}

<script src="~/Scripts/jquery-3.4.1.slim.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<style>
    p.wrong {
        color: #bc4442;
        margin: 5px 0px 0px 0px;
        text-align: center;
        font-size: 13px;
    }

    input {
        margin-top: 22px;
        border: 2px solid;
        height: 35px;
        border-radius: 25px;
        padding-left: 15px;
    }

    spam {
        display: inline-block;
        margin-left: 15px;
    }

    form {
        width: 100%;
        display: flex;
        justify-content: center;
    }

    input.btn.btn-default {
        border: 2px solid black;
        border-radius: 25px;
        color: black;
        font-weight: bold;
    }

    input.btn.btn-default {
        width: 256px;
        height: 35px;
        margin-top: 20px;
    }

    spam.surname {
        margin-top: 5px;
    }

    input#Gender {
        position: relative;
        top: 4px;
        left: 12px;
        height: 15px;
    }

    spam.teacher {
        margin-top: 10px;
        margin-bottom: 5px;
    }

    span.text-danger.field-validation-error {
        margin-left: 15px;
        font-size: 13px;
    }


    input#LastName {
        margin-bottom: 0;
    }

    h4 {
        color: black;
        font-weight: bold;
    }
</style>